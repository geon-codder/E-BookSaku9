<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PanduanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBackPanduantoHome"
                android:layout_width="46dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back" />


            <TextView
                android:id="@+id/tvJudulPanduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Panduan Aplikasi" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tvAboutApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Tentang Aplikasi" />

        <TextView
            android:id="@+id/tvDescApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="          Perpusta adalah aplikasi perpustakaan yang menyimpan buku-buku dalam bentuk elektronik (E-Book). Aplikasi ini dibuat bertujuan untuk mengatasi masalah kekurangan buku cetak di perpustakaan. Aplikasi ini tidak membutuhkan akses internet, jadi semua buku sudah tersimpan di dalam penyimpanan aplikasi." />

        <TextView
            android:id="@+id/tvDesc2App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="          Aplikasi ini akan bertambah penyimpanannya jika sudah membuka buku (akan automatis bertambah menjadi cache (sampah aplikasi) sebanyak ukuran file bukunya. Jadi Pengembang menyarankan untuk menghapus cache secara rutin jika terasa penyimpanannya sudah besar. Berikut cara menghapus cache aplikasi:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="1. Tahan ikon aplikasi sampai muncul gambar dibawah lalu klik info aplikasi" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:src="@drawable/step1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="2. Klik Penggunaan penyimpanan" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="270dp"
            android:src="@drawable/step2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="3. Klik Clear Cache" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="270dp"
            android:src="@drawable/step3"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Ada Masukan? Silakan hubungi instagram @abdmalikia" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>