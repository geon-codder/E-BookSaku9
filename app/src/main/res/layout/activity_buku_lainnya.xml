<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".BukuLainnyaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBacklaintoHome"
                android:layout_width="46dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back" />


            <TextView
                android:id="@+id/tvJudulLainnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Daftar Buku Lainnya" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/btnOliMTK"
            android:layout_height="wrap_content"
            android:layout_width="273dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_200"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="Olimpiade Matematika" />


        <Button
            android:id="@+id/btnChanelYT"
            android:layout_height="wrap_content"
            android:layout_width="273dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="Rekomendasi Channel Youtube Edukasi" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>